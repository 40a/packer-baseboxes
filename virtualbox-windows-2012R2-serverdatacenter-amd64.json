{
  "builders": [
  {
    "type": "virtualbox-windows-iso",
    "boot_wait": "30m",
    "disk_size": 61440,
    "headless": false,
    "floppy_files": [
      "./windows-2012R2-serverdatacenter-amd64/autounattend.xml",
      "./windows-2012R2-serverdatacenter-amd64/sysprep-unattend.xml",
      "./common/set-power-config.ps1",
      "./common/microsoft-updates.ps1",
      "./common/win-updates.ps1",
      "./common/enable-winrm.ps1",
      "./common/run-sysprep.ps1",
      "./common/oracle-cert.cer"
    ],    
    "iso_url": "9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5_slipstream.ISO",
    "iso_checksum_type": "sha1",
    "iso_checksum": "3cf2ab57f962409a4a43ddd83497a3938f27fdf7",
    "winrm_username": "vagrant",
    "winrm_password": "vagrant",
    "winrm_wait_timeout": "4h",
    "shutdown_command": "c:/windows/system32/WindowsPowerShell/v1.0/powershell.exe -File a:\\run-sysprep.ps1",    
    "guest_os_type": "Windows2012_64",
    "vboxmanage": [
      [
        "modifyvm","{{.Name}}","--memory","4096"
      ],
      [
        "modifyvm","{{.Name}}","--cpus","4"
      ]
    ]
  }],
  "provisioners": [{
    "type": "powershell",
    "elevated_user":"vagrant",
    "elevated_password":"vagrant",
    "scripts": [
      "./common/install-7zip.ps1",
      "./common/install-virtualbox-tools.ps1",    
      "./common/install-chef.ps1",
      "./common/compile-dotnet-assemblies.ps1",
      "./common/cleanup.ps1",
      "./common/ultradefrag.ps1",
      "./common/sdelete.ps1"
    ]
  }],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "{{.Provider}}_windows-2012r2_chef.box"
    }
  ]
}