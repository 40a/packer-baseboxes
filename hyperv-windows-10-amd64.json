{
  "variables": {
    "hyperv_switchname": "{{env `hyperv_switchname`}}"
  },
  "builders": [
  {
    "vm_name":"windows10",
    "type": "hyperv-iso",
    "disk_size": 61440,
    "floppy_files": [],
    "secondary_iso_images": [
      "./windows/windows-10-amd64/answer.iso"
    ],
    "http_directory": "./windows/common/http/",
    "boot_wait": "0s",
    "boot_command": [
      "a<wait>a<wait>a"
    ],
    "headless": false,
    "iso_url": "en_windows_10_enterprise_x64_dvd_6851151.iso",
    "iso_checksum_type": "sha1",
    "iso_checksum": "30AD1CDF5D0670F12788005131E24862F6AB8AAB",
    "communicator":"winrm",
    "winrm_username": "vagrant",
    "winrm_password": "vagrant",
    "winrm_timeout" : "4h",
    "shutdown_command": "f:\\run-sysprep.cmd",  
    "ram_size_mb": 2048,
    "cpu": 2,
    "generation": 2,
    "switch_name":"{{user `hyperv_switchname`}}",
    "enable_secure_boot":true
  }],
  "provisioners": [{
    "type": "powershell",
    "elevated_user":"vagrant",
    "elevated_password":"vagrant",
    "scripts": [
      "./windows/common/install-7zip.ps1",
      "./windows/common/install-chef.ps1",
      "./windows/common/compile-dotnet-assemblies.ps1",
      "./windows/common/cleanup.ps1",
      "./windows/common/ultradefrag.ps1",
      "./windows/common/sdelete.ps1"
    ]
  }],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{.Provider}}_windows-10_chef.box"
    }
  ]
}